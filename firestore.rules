rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function ownsPage(pageId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/pages/$(pageId)).data.connectedBy == request.auth.uid;
    }

    // ========================================
    // USERS Collection
    // ========================================
    match /users/{userId} {
      // Users can only read/write their own data
      allow read, write: if isUser(userId);
    }

    // ========================================
    // PAGES Collection
    // ========================================
    match /pages/{pageId} {
      // Allow create/update if the user is setting themselves as the owner
      allow write: if isAuthenticated() && 
        request.resource.data.connectedBy == request.auth.uid;
      
      // Can read if they are the owner
      allow read: if isAuthenticated() && 
        resource.data.connectedBy == request.auth.uid;
    }

    // ========================================
    // COMMENTS Collection
    // ========================================
    match /comments/{commentId} {
      // Comments are ONLY writable by backend (Railway worker)
      allow write: if false;
      
      // Users can read comments from pages they own
      allow read: if isAuthenticated() && 
        ownsPage(resource.data.pageId);
    }

    // ========================================
    // RULES Collection
    // ========================================
    match /rules/{ruleId} {
      // Can create if they own the page
      allow create: if isAuthenticated() && 
        ownsPage(request.resource.data.pageId);
      
      // Can read/update/delete if they own the page
      allow read, update, delete: if isAuthenticated() && 
        ownsPage(resource.data.pageId);
    }

    // ========================================
    // ACTION LOGS Collection
    // ========================================
    match /actionLogs/{logId} {
      // Logs are ONLY writable by backend
      allow write: if false;
      
      // Users can read logs from pages they own
      allow read: if isAuthenticated() && 
        ownsPage(resource.data.pageId);
    }

    // ========================================
    // SETTINGS Collection
    // ========================================
    match /settings/{userId} {
      // Users can only read/write their own settings
      allow read, write: if isUser(userId);
    }
  }
}
